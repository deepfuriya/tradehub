<%- include('../partials/header.ejs') %>

<div class="container-fluid mt-3">

    <div class="container-fluid w-100 font-weight-bold text-center">
      <span class="h2 font-weight-bold text-info">MANAGE OFFER</span>
    </div>
  
    <hr class="mt-3 mb-3">

    <form action="" method="POST">

        <div class="container main-container mt-lg-5 mb-lg-5">    


            <div class="row w-50 m-auto font-weight-bold">

                <div class="col-lg-6">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="/images/<%= data.trade_item.image%> " alt="Card image cap">
                        <div class="card-body">
                          <p class="card-text"><%= data.trade_item.item_category+" "+data.trade_item.item_name%></p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="/images/<%= data.trade_with.image%> " alt="Card image cap">
                        <div class="card-body">
                          <p class="card-text"><%= data.trade_with.item_category+" "+data.trade_with.item_name%></p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 text-center mt-3">
                    <div class="form-group">
                        <% if(currentUser == data.creater_user_id){%>
                            <button class="btn btn-danger" formmethod="POST" formaction="/users/offer/<%=data._id%>?_method=DELETE">CANCEL OFFER</button>
                        <% }else{ %>
                            <input type="text" value="<%= data._id %>" name="offer_id" hidden>
                            <button class="btn btn-success" formmethod="POST" formaction="/users/offer/">ACCEPT OFFER</button>
                            <button class="btn btn-danger" formmethod="POST" formaction="/users/offer/<%=data._id%>?_method=DELETE">REJECT OFFER</button>     
                        <% } %>
                    </div>
                </div>



            </div> 

        </div>

    </form>

  </div>



<%- include('../partials/footer.ejs') %>
