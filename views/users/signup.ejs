<%- include('../partials/header.ejs') %>

<div class="container-fluid mt-3">

    <div class="container-fluid w-100 font-weight-bold text-center">
      <span class="h2 font-weight-bold text-info">SIGN UP</span>
    </div>
  
    <hr class="mt-3 mb-3">

    <form action="/users/signup" method="POST">

        <div class="container main-container mt-lg-5 mb-lg-5">    

            <div class="row w-50 m-auto font-weight-bold">

                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="p-0 m-0">FIRST NAME<span class="required">*</span></label>
                            <input type="text" class="input form-control" name="firstName" required>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="p-0 m-0">LAST NAME<span class="required">*</span></label>
                            <input type="text" class="input form-control" name="lastName" required>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="p-0 m-0">EMAIL<span class="required">*</span></label>
                            <input type="email" class="input form-control" name="email" required>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="p-0 m-0">PASSWORD<span class="required">*</span></label>
                            <input type="password" class="input form-control" name="password" minlength="8" maxlength="64" required>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <button class="btn btn-success">SIGN UP</button>
                        <button class="btn btn-danger" onclick="window.location.reload()">CANCEL</button>
                    </div>
                </div>


            </div> 

        </div>

    </form>

  </div>



<%- include('../partials/footer.ejs') %>
