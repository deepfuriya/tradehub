<%- include('../partials/header.ejs') %>

<div class="container-fluid mt-3">

    <div class="container-fluid w-100 font-weight-bold text-center">
      <span class="h2 font-weight-bold text-info">SELECT ITEM YOU WANT TO TRADE</span>
    </div>
  
    <hr class="mt-3 mb-3">

    <div class="container main-container mt-lg-1 mb-lg-5">    
        
        <form action="/users/trade/" method="POST">

            <input value="<%= accepter_user_id %>" name="accepter_user_id" hidden>
            <input value="<%= tradeId %>" name="trade_with" hidden>
            <div class="row w-100 m-auto font-weight-bold">
            
                <div class="col-12 text-left bg-light p-2">
                    <h4 style="letter-spacing:1.75px">YOUR AVAILABLE TRADE ITEMS</h4>
                </div>
                
            
                <table class="table table-bordered table-striped h5">
                    <thead class="text-center">
                        <tr>
                            <th>SELECT</th>
                            <th></th>
                            <th>CATEGORY</th>
                            <th>TITLE</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(productsData.length){
                            productsData.forEach(val => { %>
                                <tr>
                                    <td class="text-center"><input type="radio" name="trade_item" value="<%=val._id %>" style="cursor: pointer;" required></td>
                                    <td style="max-width:85px"><img height="150px" src="/images/<%= val.image%>"></td>
                                    <td class="text-center h4"><%= val.item_category %></td>
                                    <td class="text-center h4"><%= val.item_name %></td>
                                </tr>
                        <%  })%>
                                <tr>
                                    <td class="text-left" colspan="4">
                                        <button type="submit" class="btn btn-success">TRADE</button>
                                        <a href="/trades" class="btn btn-danger">CANCEL</a>
                                    </td>
                                </tr>
                        <% }else{ %>    
                        <tr>
                            <td colspan="4">NO PRODUCTS ADDED TO TRADE</td>
                        </tr>
                        <% }%>
                    </tbody>
                </table>

            </div> 

        </form>
    </div>

  </div>



<%- include('../partials/footer.ejs') %>
