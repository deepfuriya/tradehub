<%- include('./partials/header.ejs') %>

<div class="container-fluid mt-3">

  <div class="container-fluid w-100 font-weight-bold">
    <span class="h2 font-weight-bold text-info">CONTACT US</span>
  </div>

  <hr class="mt-3 mb-3">
    

<div class="container mt-3 mb-5">
  <h1>Contact Us</h1>
  <form action="#" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="mb-3">
      <label for="message" class="form-label">Message</label>
      <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-info">Submit</button>
  </form>
</div>

<br>


<div class="row text-center">

  <div class="col-lg-4 text-center">
      <div class="">
          <div class="card ml-auto mr-auto" style="width: 18rem;">
              <img class="card-img-top ml-auto mr-auto" src="/fontawesome/address.svg" alt="Address icon" style="width: 45%">
              <div class="card-body">
                <h5 class="card-title">Address</h5>
                <p class="card-text">University of North Carolina - Charlotte</p>
              </div>
            </div>
      </div>
  </div>
  
  <div class="col-lg-4  text-center">
      <div class="">
          <div class="card ml-auto mr-auto" style="width: 18rem;">
              <img class="card-img-top w-50 ml-auto mr-auto" src="/fontawesome/phone.svg" alt="Phone icon">
              <div class="card-body">
                <h5 class="card-title">Phone</h5>
                <p class="card-text">Mon - Fri : 09:00 AM to 05:00 PM <br> Sat - Sun : Closed <br> +1 1800-123-4567</p>
              </div>
            </div>
      </div>
  </div>

  <div class="col-lg-4 text-center">
      <div class="">
          <div class="card ml-auto mr-auto" style="width: 18rem;">
              <img class="card-img-top w-50 ml-auto mr-auto" src="/fontawesome/mail.svg" alt="EMail icon">
              <div class="card-body">
                <h5 class="card-title">Email</h5>
                <p class="card-text">For any queries email us at <br> dfuriya@uncc.edu <br> info@phoneify.com </p>
              </div>
            </div>
      </div>
  </div>

</div>
</div>

<br><br>
